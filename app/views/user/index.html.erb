<div class= "panel panel-default"> 
	<div class= "panel-body">
		<% if @users.blank? %>
			<h4>There are no users matching the term <%= params[:search] %>.</h4>
		<% end %>
	</div>
</div> 
<div class="container">
	      <%= form_tag(users_path, :method=> "get", id: "search-form", remote: true)  do %>
        <%= text_field_tag :search, params[:search], placeholder:"search for users", class:"form-control mr-sm-2", :required => 'required' %>
        <%= submit_tag "Search", :name => nil, id: "submit-search" %>
      <% end %>

     
    
    <br>
	
</div>